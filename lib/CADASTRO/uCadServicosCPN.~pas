procedure TfrmCadServicosCPN.GeraXML;
var sXML:TStringList;

  procedure GridXML(sg:TStringGrid);
  var r,c:integer; nome,valor:string;
  begin
    for r:=2 to sg.RowCount do
      for c:=0 to sg.ColCount do
      begin
        nome := sg.Name + '_L' + IntToStr(r) + 'C' + IntToStr(c);
        sXML.Add('<'+nome+'>' + sg.Cells[c,r] + '</'+nome+'>');
      end;
  end;

begin
   sXML := TStringList.Create;
   try
      sXML.Add('<?xml version="1.0" encoding="iso-8859-1"?>');
      sXML.Add('<?xml-stylesheet type="text/xsl" href="SERVICOSCPN.xslt"?>');
      sXML.Add('<Programa>');
      sXML.Add('  <Parametros>');
      sXML.Add('    <MUNICIPIO>'+leMunicipio.Text+'</MUNICIPIO>');
      sXML.Add('    <PROVINCIA>'+leProvincia.Text+'</PROVINCIA>');
      sXML.Add('    <UNIDADE>'+leUnidade.Text+'</UNIDADE>');
      sXML.Add('  </Parametros>');
      sXML.Add('  <Dados>');

      GridXML(sgServicosCPN);

      sXML.Add('  </Dados>');
      sXML.Add(' </Programa>');

      sXML.SaveToFile(sArq);
   finally
      FreeAndNil(sXML);
   end;
end;


procedure TfrmCadServicosCPN.CarregaComboAno;
var data:TDate; i:integer;
begin
  data := dm.GetDateTime;
  cbAno.Items.Add(FormatDateTime('yyyy',data));
  cbAte.Items.Add(FormatDateTime('yyyy',data));
  for i:= 1 to 9 do
  begin
    cbAno.Items.Add(FormatDateTime('yyyy',IncYear(data,-i)));
    cbAte.Items.Add(FormatDateTime('yyyy',IncYear(data,-i)));
  end;
end;

procedure TfrmCadServicosCPN.CriaGrid;
var r,c:integer; data:TDateTime; i,iDe,iAte, calc:integer;
begin
  for r:=0 to 12 do
   for c:=0 to 5 do
     sgServicosCPN.Cells[c,r] := '';

  sgServicosCPN.RowCount := 13;
  sgServicosCPN.ColCount := 6;
  sgServicosCPN.FixedCols := 2;
  sgServicosCPN.FixedRows := 2;
  sgServicosCPN.Cells[2,0]  := 'Número de Serviços';
  sgServicosCPN.Cells[0,0]  := 'Ano';
  sgServicosCPN.Cells[1,0]  := 'Nome da Unidade';
  sgServicosCPN.Cells[2,1]  := 'CPN sem PTV';
  sgServicosCPN.Cells[3,1]  := 'CPN com PTV';
  sgServicosCPN.Cells[4,1]  := 'Aconselhamento';
  sgServicosCPN.Cells[5,1]  := 'TARV';

  sgServicosCPN.Cells[0,12] := 'Total';

  sgServicosCPN.DefaultColWidth := 100;
  sgServicosCPN.DefaultRowHeight := 22;
  sgServicosCPN.RowHeights[1] := 22;
  sgServicosCPN.ColWidths[0] := 50;
  sgServicosCPN.ColWidths[1] := -1;
  sgServicosCPN.ColWidths[2] := 160;
  sgServicosCPN.ColWidths[3] := 160;
  sgServicosCPN.ColWidths[4] := 160;
  sgServicosCPN.ColWidths[5] := 160;
  data := dm.GetDateTime;
  iAte := StrToInt(FormatDateTime('yyyy',data));
  iDe := (iAte - 9);

  calc := 1;
  for i:= iDe to iAte do
  begin
    sgServicosCPN.Cells[0,(calc + 1)]  := IntToStr(i);
    calc := calc + 1;
  end;
  sgServicosCPN.Repaint;

end;

function TfrmCadServicosCPN.ValidaExclusao: boolean;
begin
  try
    if dmGeral.TB_PRE_NATAL.State in [dsInsert] then
    begin
      //Primeiro deve Excluir, para depois entao incluir todos
      if dmGeral.TB_PRE_NATAL.State in dsEditModes then
        dmGeral.TB_PRE_NATAL.Cancel;

      dmGeral.TB_PRE_NATAL.Close;
      if leUnidade.lookupValue <> '' then
        dmGeral.TB_PRE_NATAL.ParamByName('CD_UNIDADE').AsInteger := strtoint(leUnidade.lookupValue);
      if leProvincia.lookupValue <> '' then
        dmGeral.TB_PRE_NATAL.ParamByName('CD_PROVINCIA').AsInteger := strtoint(leProvincia.lookupValue);
      if leMunicipio.lookupValue <> '' then
        dmGeral.TB_PRE_NATAL.ParamByName('CD_MUNICIPIO').AsInteger := strtoint(leMunicipio.lookupValue);
      //dmGeral.TB_PRE_NATAL.ParamByName('VL_ANO').AsInteger := StrToInt(cbAno.text);
      dmGeral.TB_PRE_NATAL.Open;

      dmGeral.TB_PRE_NATAL.First;
      while not dmGeral.TB_PRE_NATAL.Eof do
        dmGeral.TB_PRE_NATAL.Delete;

      Result := true;
    end;

    if dmGeral.TB_PRE_NATAL.State in [dsEdit] then
    begin
      //Primeiro deve Excluir, para depois entao incluir todos
      if dmGeral.TB_PRE_NATAL.State in dsEditModes then
        dmGeral.TB_PRE_NATAL.Cancel;

      dmGeral.TB_PRE_NATAL.Close;
      if leUnidade.lookupValue <> '' then
        dmGeral.TB_PRE_NATAL.ParamByName('CD_UNIDADE').AsInteger := Unidade;
      if leProvincia.lookupValue <> '' then
        dmGeral.TB_PRE_NATAL.ParamByName('CD_PROVINCIA').AsInteger := Provincia;
      if leMunicipio.lookupValue <> '' then
        dmGeral.TB_PRE_NATAL.ParamByName('CD_MUNICIPIO').AsInteger := Municipio;
      //dmGeral.TB_PRE_NATAL.ParamByName('VL_ANO').AsInteger := StrToInt(cbAno.text);
      dmGeral.TB_PRE_NATAL.Open;

      dmGeral.TB_PRE_NATAL.First;
      while not dmGeral.TB_PRE_NATAL.Eof do
        dmGeral.TB_PRE_NATAL.Delete;

      Result := true;
    end;

  except
    Result := false;
  end;
end;

procedure TfrmCadServicosCPN.Varregrid;
var i:integer;
    cdUnidade, cdProvincia, cdMunicipio:Integer;
    sAno:String;
begin
  if (leProvincia.lookupValue = '' ) then
  begin
    MessageDlg('É necessário informar Provincia!',mtInformation,[mbOK],0);
    leProvincia.SetFocus;
    Abort;
  end;

  if (leMunicipio.lookupValue = '') then
  begin
    if MessageDlg('O Municipio não foi informada, '#13#10'deseja continuar?',mtConfirmation,
        [mbYes,mbNo],0) = mrNo then
      begin
        leMunicipio.SetFocus;
        Abort;
      end;
  end;

  if (leUnidade.lookupValue = '') then
  begin
    if MessageDlg('A Unidade não foi informada, '#13#10'deseja continuar?',mtConfirmation,
        [mbYes,mbNo],0) = mrNo then
      begin
        leUnidade.SetFocus;
        Abort;
      end;
  end;
{
  if (cbAno.ItemIndex = -1) then
  begin
    MessageDlg('É necessário informar Ano!',mtInformation,[mbOK],0);
    cbAno.SetFocus;
    Abort;
  end;
}

  cdProvincia := strtoint(leProvincia.lookupValue);
  sAno := cbAno.Text;

  if leMunicipio.Text <> '' then
    cdMunicipio := strtoint(leMunicipio.lookupValue);

  if leUnidade.Text <> '' then
    cdUnidade := strtoint(leUnidade.lookupValue);

  for i:=2 to 11 do
  begin
    //if (sgServicosCPN.Cells[0,i] = cbAno.text ) then
      Begin
         begin
           if not (dmGeral.TB_PRE_NATAL.State in [dsEdit,dsInsert]) then
             dmGeral.TB_PRE_NATAL.Insert;

           if cdUnidade <> null then
             dmGeral.TB_PRE_NATALCD_UNIDADE.AsInteger := cdUnidade;

           dmGeral.TB_PRE_NATALCD_PROVINCIA.AsInteger := cdProvincia;

           if cdMunicipio <> null then
             dmGeral.TB_PRE_NATALCD_MUNICIPIO.AsInteger := cdMunicipio;

           sAno := sgServicosCPN.Cells[0,i];
           dmGeral.TB_PRE_NATALVL_ANO.AsString := sAno;
           dmGeral.TB_PRE_NATALVL_Y.AsInteger := i;
           dmGeral.TB_PRE_NATALDT_REGISTRO.AsDateTime := dm.GetDateTime;

           dmGeral.TB_PRE_NATALVL_CPN_SEM_PTV.AsString := sgServicosCPN.Cells[2,i];
           dmGeral.TB_PRE_NATALVL_CPN_COM_PTV.AsString := sgServicosCPN.Cells[3,i];
           dmGeral.TB_PRE_NATALVL_AT.AsString := sgServicosCPN.Cells[4,i];
           dmGeral.TB_PRE_NATALVL_TARV.AsString := sgServicosCPN.Cells[5,i];

           dmGeral.TB_PRE_NATAL.Post;
         end;
       end;
  end;
end;

procedure TfrmCadServicosCPN.AbreConsultas;
begin
  PSQL := qyProvincia.sql.text;
  MSQL := qyMunicipio.sql.text;
  USQL := qyUnidade.sql.text;
  qyProvincia.Open;
  qyMunicipio.Open;
  qyUnidade.Open;
end;

procedure TfrmCadServicosCPN.FechaConsultas;
begin
  qyProvincia.Close;
  qyMunicipio.Close;
  qyUnidade.Close;
end;

procedure TfrmCadServicosCPN.CalculaTotal;
var r,c:integer; tl,tc,tg:real;
begin
  for c:=1 to 5 do
  begin
      tc :=
         Valor(sgServicosCPN.Cells[c,2]) +
         Valor(sgServicosCPN.Cells[c,3]) +
         Valor(sgServicosCPN.Cells[c,4]) +
         Valor(sgServicosCPN.Cells[c,5]) +
         Valor(sgServicosCPN.Cells[c,6]) +
         Valor(sgServicosCPN.Cells[c,7]) +
         Valor(sgServicosCPN.Cells[c,8]) +
         Valor(sgServicosCPN.Cells[c,9]) +
         Valor(sgServicosCPN.Cells[c,10])+
		 Valor(sgServicosCPN.Cells[c,11]);
      sgServicosCPN.Cells[c,12] := FloatToStr(tc);
      tg := tc;
  end;
end;

procedure TfrmCadServicosCPN.CarregaGrid(TB_PRE_NATAL:TDataSet);
var rAux:real; y:integer;
begin
    CriaGrid;
    dmGeral.TB_PRE_NATAL.First;
    while Not dmGeral.TB_PRE_NATAL.Eof do
    begin
      //raux := valor(sgServicosCPN.Cells[0,dmGeral.TB_PRE_NATALVL_Y.AsInteger]) +
      //        valor(dmGeral.TB_PRE_NATALVL_ANO.AsString);
      //sgServicosCPN.Cells[0,dmGeral.TB_PRE_NATALVL_Y.AsInteger] := floattostr(raux);
      //sgServicosCPN.Cells[0,dmGeral.TB_PRE_NATALVL_Y.AsInteger] := dmGeral.TB_PRE_NATALVL_ANO.AsString;
      y := sgServicosCPN.Cols[0].IndexOf(dmGeral.TB_PRE_NATALVL_ANO.AsString);

      raux := valor(sgServicosCPN.Cells[2,y]) +
              valor(dmGeral.TB_PRE_NATALVL_CPN_SEM_PTV.AsString);
      sgServicosCPN.Cells[2,y] := floattostr(raux);

      raux := valor(sgServicosCPN.Cells[3,y]) +
              valor(dmGeral.TB_PRE_NATALVL_CPN_COM_PTV.AsString);
      sgServicosCPN.Cells[3,y] := floattostr(raux);

      raux := valor(sgServicosCPN.Cells[4,y]) +
              valor(dmGeral.TB_PRE_NATALVL_AT.AsString);
      sgServicosCPN.Cells[4,y] := floattostr(raux);

      raux := valor(sgServicosCPN.Cells[5,y]) +
              valor(dmGeral.TB_PRE_NATALVL_TARV.AsString);
      sgServicosCPN.Cells[5,y] := floattostr(raux);

      dmGeral.TB_PRE_NATAL.Next;
    end;

    sgServicosCPN.Repaint;
    CalculaTotal;

end;


procedure TfrmCadServicosCPN.FormShow(Sender: TObject);
begin
  inherited;
  qyGrid.Open;
  CriaGrid;
  pgGeral.ActivePageIndex := 1;
end;

procedure TfrmCadServicosCPN.FormClose(Sender: TObject;
  var Action: TCloseAction);
begin
  FechaConsultas;
  dmGeral.TB_PRE_NATAL.SelectSQL.Text := sSQLServicosCPN;
end;

procedure TfrmCadServicosCPN.sgServicosCPNDrawCell(Sender: TObject; ACol,
  ARow: Integer; Rect: TRect; State: TGridDrawState);
var Conteudo:String; x,y,hf,hw,t,calc,i:integer; c:TColor;   r:TRect;
begin
  inherited;
  Conteudo := sgServicosCPN.Cells[ACol,ARow];


  hf := sgServicosCPN.Canvas.TextHeight('Lj');
  //SetTextAlign(sgServicosCPN.Canvas.Handle, TA_CENTER);

  //Mesclar: Negrito, Centro, Borda
  if (ARow = 0) and (ACol > 1) then
  begin
      if ACol = 2 then
      begin
        Mes[4].gr := Rect;
        Mes[4].sMesclado := Conteudo;
      end;

      if (ACol = 5) then
      begin
        r.Left := Mes[4].gr.Left;
        r.Top := Mes[4].gr.Top;
        r.Bottom := Mes[4].gr.Bottom;
        r.Right := Rect.Right;

        sgServicosCPN.Canvas.Font.Style:=[fsbold];
        sgServicosCPN.Canvas.FillRect(r);
        t := sgServicosCPN.Canvas.TextWidth(Mes[4].sMesclado);
        x := r.Left + (((r.Right - r.Left)-t)  div 2);
        y := r.Top  - ((r.Top + hf - r.Bottom) div 2);
        sgServicosCPN.Canvas.TextRect(r,x,y,Mes[4].sMesclado);
        DesenhaBordas(sgServicosCPN.Canvas,r);
      end;

  end;


  //Mesclar: Negrito, Centro, Borda
  if (ARow in [0,1]) and (ACol = 0) then
  begin
      if ARow = 0 then
      begin
        Mes[1].gr := Rect;
        Mes[1].sMesclado := Conteudo;
      end;

      if (ARow = 1) then
      begin
        r.Left := Mes[1].gr.Left;
        r.Top := Mes[1].gr.Top;
        r.Bottom := Rect.Bottom;
        r.Right := Mes[1].gr.Right;

        sgServicosCPN.Canvas.Font.Style:=[fsbold];
        sgServicosCPN.Canvas.FillRect(r);
        t := sgServicosCPN.Canvas.TextWidth(Mes[1].sMesclado);
        x := r.Left + (((r.Right - r.Left)-t)  div 2);
        y := r.Top  - ((r.Top + hf - r.Bottom) div 2);
        sgServicosCPN.Canvas.TextRect(r,x,y,Mes[1].sMesclado);

        //DrawText(sgServicosCPN.Canvas.Handle,Pchar(Mes[1].sMesclado),-1,r,DT_WORDBREAK+DT_CENTER+DT_VCENTER);
        DesenhaBordas(sgServicosCPN.Canvas,r);
      end;
  end;


  //Mesclar: Negrito, Centro, Borda
  if (ARow in [0,1]) and (ACol = 1) then
  begin
      if ARow = 0 then
      begin
        Mes[2].gr := Rect;
        Mes[2].sMesclado := Conteudo;
      end;

      if (ARow = 1) then
      begin
        r.Left := Mes[2].gr.Left;
        r.Top := Mes[2].gr.Top;
        r.Bottom := Rect.Bottom;
        r.Right := Mes[2].gr.Right;

        sgServicosCPN.Canvas.Font.Style:=[fsbold];
        sgServicosCPN.Canvas.FillRect(r);
        t := sgServicosCPN.Canvas.TextWidth(Mes[2].sMesclado);
        x := r.Left + (((r.Right - r.Left)-t)  div 2);
        y := r.Top  - ((r.Top + hf - r.Bottom) div 2);
        sgServicosCPN.Canvas.TextRect(r,x,y,Mes[2].sMesclado);
        //DrawText(sgServicosCPN.Canvas.Handle,Pchar(Mes[2].sMesclado),-1,r,DT_WORDBREAK+DT_CENTER+DT_VCENTER);
        DesenhaBordas(sgServicosCPN.Canvas,r);
      end;
  end;


  //Titulo: Negrito, Centro, Borda
  if ((ACol in [0]) and (ARow >1))or
     ((ACol > 1) and (ARow = 1))then
  begin
     if not((ARow in [0])and(ACol=0)) then
     begin
       r := Rect;
       sgServicosCPN.Canvas.Font.Style := [fsbold];
       sgServicosCPN.Canvas.FillRect(r);
       t := sgServicosCPN.Canvas.TextWidth(Conteudo);
        x := r.Left + (((r.Right - r.Left)-t)  div 2);
       y := r.Top  - ((r.Top + hf - r.Bottom) div 2);
       sgServicosCPN.Canvas.TextRect(r,x,y,Conteudo);
       //DrawText(sgServicosCPN.Canvas.Handle,Pchar(Conteudo),-1,r,DT_WORDBREAK+DT_CENTER+DT_VCENTER);
       DesenhaBordas(sgServicosCPN.Canvas,r);
     end;
  end;


  //Linhas Ano sem preenchimento: Cor
{
  if DMGERAL.TB_PRE_NATAL.State in [dsEdit, dsInsert] then
  begin
    for i:=2 to 11 do
    begin
      if (sgServicosCPN.Cells[0,i] <> cbAno.text ) then
      Begin
        if ((ARow in [i]) and (ACol >0 ))then
        begin
           r := Rect;
           sgServicosCPN.Canvas.Brush.Color := cl3DLight;
           sgServicosCPN.Canvas.Font.Style := [fsbold];
           sgServicosCPN.Canvas.FillRect(r);
           t := sgServicosCPN.Canvas.TextWidth(Conteudo);
           x := r.Left + (((r.Right - r.Left)-t)  div 2);
           y := r.Top  - ((r.Top + hf - r.Bottom) div 2);
           sgServicosCPN.Canvas.TextRect(r,x,y,Conteudo);
        end;
      end;

    end;
  end;
}

  //Total: Negrito, Centro, Cor
  if ((ARow in [12]) and (ACol >0 ))then
  begin
     r := Rect;
     sgServicosCPN.Canvas.Brush.Color := cl3DLight;
     sgServicosCPN.Canvas.Font.Style := [fsbold];
     sgServicosCPN.Canvas.FillRect(r);
     t := sgServicosCPN.Canvas.TextWidth(Conteudo);
     x := r.Left + (((r.Right - r.Left)-t)  div 2);
     y := r.Top  - ((r.Top + hf - r.Bottom) div 2);
     sgServicosCPN.Canvas.TextRect(r,x,y,Conteudo);
  end;
end;


procedure TfrmCadServicosCPN.FormCreate(Sender: TObject);
begin
  inherited;
  FbPermiteMudarPagina := False;
  AbreConsultas;
  CarregaComboAno;
  bCarregaGrid := True;
  sSQLServicosCPN := dmGeral.TB_PRE_NATAL.SelectSQL.Text;

end;

procedure TfrmCadServicosCPN.btIncluirClick(Sender: TObject);
begin
  pgGeral.ActivePageIndex := 1;
  dmGeral.TB_PRE_NATAL.Close;
  dmGeral.TB_PRE_NATAL.Open;

  inherited;
  leProvincia.text := '';
  leUnidade.text := '';
  leMunicipio.text := '';
  cbAno.ItemIndex := -1;
  cbAte.ItemIndex := -1;
  bConsolidado := false;

  CriaGrid;
{
  //Controle de Usuario (RELATORIOS NAO TEM TRIGGERS) (Operacao INSERT)
  with TIBQuery.Create(nil) do
    begin
      Database := DM.DB;
      sql.Add('INSERT INTO AUDITORIA	(CD_AUDITORIA, CD_UND, CD_USU,DT_AUDITORIA, NM_TABELA, TP_OPERACAO)');
      sql.Add('VALUES 	(GEN_ID(GEN_AUDITORIA,1),'+QuotedStr(prmUnidade)+','+QuotedStr(DM.qyLoginCD_USUARIO.AsString)+', ''NOW'', ''REGISTRO_PRE_NATAL'', ''I'')');
      ExecSQL;
      close;
      free;
    end;
}
end;

procedure TfrmCadServicosCPN.sgServicosCPNSelectCell(Sender: TObject; ACol,
  ARow: Integer; var CanSelect: Boolean);
var
  i:integer;
begin
  //for i:=2 to 11 do
  begin
    //if (sgServicosCPN.Cells[0,i] = cbAno.text ) then
    Begin
      bEdit := (((ARow >=2) and (ARow <=11)) and (ACol >0 ));
      if (bEdit) and (dsControle.DataSet.State in [dsEdit,dsInsert]) then
        sgServicosCPN.Options := sgServicosCPN.Options + [goEditing]
      else
        sgServicosCPN.Options := sgServicosCPN.Options - [goEditing];
    end
    {else
      if (bEdit) and (dsControle.DataSet.State in [dsEdit,dsInsert]) then
        sgServicosCPN.Options := sgServicosCPN.Options + [goEditing]
      else
        sgServicosCPN.Options := sgServicosCPN.Options - [goEditing];}
  end;

end;

procedure TfrmCadServicosCPN.btgravarClick(Sender: TObject);
begin
  if bConsolidado then
  begin
    MessageDlg('Dados em modo de consolidação, não podem ser modificados!',mtInformation,[mbOK],0);
  end
  else
  begin
    ValidaExclusao;
    VarreGrid;
    inherited;
  end;

end;

procedure TfrmCadServicosCPN.sgServicosCPNSetEditText(Sender: TObject;
  ACol, ARow: Integer; const Value: String);
var
  i:integer;

begin
  inherited;

  begin
    //if (sgServicosCPN.Cells[0,i] = cbAno.text ) then
    Begin
      bEdit := (not(ARow in [0,1,12]) and (ACol >0 ));
      if (bEdit) and (dsControle.DataSet.State in [dsEdit,dsInsert]) then
        sgServicosCPN.Options := sgServicosCPN.Options + [goEditing]
      else
        sgServicosCPN.Options := sgServicosCPN.Options - [goEditing];
    end
    {else
      if (bEdit) and (dsControle.DataSet.State in [dsEdit,dsInsert]) then
        sgServicosCPN.Options := sgServicosCPN.Options + [goEditing]
      else
        sgServicosCPN.Options := sgServicosCPN.Options - [goEditing];}
  end;

  CalculaToTal;

end;

procedure TfrmCadServicosCPN.pgGeralChange(Sender: TObject);
//var  i:integer;
begin
  inherited;
{
  //limpa coluna
  for i:= 2 to 11 do
  begin
    sgCriancaExposta.Cells[0,i]  := '';
  end;

  if pgGeral.ActivePageIndex=1 then
  begin
    if not qyGridCD_PROVINCIA.IsNull then
      leProvincia.lookupValue := qyGridCD_PROVINCIA.AsInteger;

    if not qyGridCD_MUNICIPIO.IsNull then
      leMunicipio.lookupValue := qyGridCD_MUNICIPIO.AsInteger;

    if not qyGridCD_UNIDADE.IsNull then
      leUnidade.lookupValue := qyGridCD_UNIDADE.AsInteger;

    if not qyGridVL_ANO.IsNull then
      begin
        cbAno.text := qyGridVL_ANO.AsString;
        cbAte.text := qyGridVL_ANO.AsString;
      end
      else
        begin
          cbAno.ItemIndex := -1;
          cbAte.ItemIndex := -1;
        end;

    btConsultarClick(sender);
  end;
}
end;

procedure TfrmCadServicosCPN.btConsultarClick(Sender: TObject);
var sSQLWhere, sSQL, sW:String; nB,nE:Integer;
begin
  inherited;
  if (dmGeral.TB_PRE_NATAL.State in [dsEdit, dsInsert]) then
    Exit;

  dmGeral.TB_PRE_NATAL.Close;
  dmGeral.TB_PRE_NATAL.SelectSQL.Text := sSQLServicosCPN;
  sSQL := sSQLServicosCPN;;
  if ckConsolidar.Checked then
  begin
    sSQLWhere := '';
    sW := ' where ';

    if leUnidade.lookupValue <> '' then
    begin
      sSQLWhere := sW + 'CD_UNIDADE = :CD_UNIDADE';
      sW := ' and ';
    end;

    if leProvincia.lookupValue <> '' then
    begin
      sSQLWhere := sSQLWhere + sW + 'CD_PROVINCIA = :CD_PROVINCIA';
      sW := ' and ';
    end;

    if leMunicipio.lookupValue <> '' then
    begin
      sSQLWhere := sSQLWhere + sW + 'CD_MUNICIPIO = :CD_MUNICIPIO';
      sW := ' and ';
    end;

    if (trim(cbAno.Text) <> '') and (trim(cbAte.Text) <> '') then
      begin
        sSQLWhere := sSQLWhere + sW + 'VL_ANO between :de and :ate';
        sW := 'and ';
      end;

    SetSQLWhere(sSQL, sSQLWhere);
    dmGeral.TB_PRE_NATAL.SelectSQL.Text := sSQL;
    if (trim(cbAno.Text) <> '') and (trim(cbAte.Text) <> '') then
    begin
      dmGeral.TB_PRE_NATAL.ParamByName('de').AsString := cbAno.text;
      dmGeral.TB_PRE_NATAL.ParamByName('ate').AsString := cbAte.text;
    end;

    bConsolidado := true;
  end
  else
    bConsolidado := false;


  //Leandro 07/05/2013 - Nao é obrigatorio nenhum dos parametros


  if (leProvincia.lookupValue <> '') then
    dmGeral.TB_PRE_NATAL.ParamByName('CD_PROVINCIA').Value := leProvincia.lookupValue;
  if (leMunicipio.lookupValue <> '') then
    dmGeral.TB_PRE_NATAL.ParamByName('CD_MUNICIPIO').Value := leMunicipio.lookupValue;
  if (leUnidade.lookupValue <> '') then
    dmGeral.TB_PRE_NATAL.ParamByName('CD_UNIDADE').Value := leUnidade.lookupValue;

  dmGeral.TB_PRE_NATAL.Open;
  CarregaGrid(dmGeral.TB_PRE_NATAL);
end;

procedure TfrmCadServicosCPN.grDadosDblClick(Sender: TObject);
begin

  if not qyGridCD_PROVINCIA.IsNull then
    leProvincia.lookupValue := qyGridCD_PROVINCIA.AsString;

  if not qyGridCD_MUNICIPIO.IsNull then
    leMunicipio.lookupValue := qyGridCD_MUNICIPIO.AsString;

  if not qyGridCD_UNIDADE.IsNull then
    leUnidade.lookupValue := qyGridCD_UNIDADE.AsString;

  //cbAno.Text := qyGridVL_ANO.AsString;
  btConsultarClick(sender);
  inherited;

end;

procedure TfrmCadServicosCPN.ckConsolidarClick(Sender: TObject);
begin
  inherited;
  lbAte.visible := ckConsolidar.Checked;
  cbAte.visible := ckConsolidar.Checked;
  lbDe.visible := ckConsolidar.Checked;
  cbAno.visible := ckConsolidar.Checked;
  lbPeriodo.visible := ckConsolidar.Checked;

end;

procedure TfrmCadServicosCPN.cbAnoChange(Sender: TObject);
begin
  inherited;
  sgServicosCPN.Repaint;

end;

procedure TfrmCadServicosCPN.btexcluirClick(Sender: TObject);
var bExisteRegistro: Boolean;
begin
  pgGeral.ActivePageIndex := 1;
  if not bConsolidado then
    pgGeralChange(sender);

{
  bExisteRegistro:=false;
  with TIBQuery.Create(nil) do // FAZ VERIFICACAO SE OS DADOS DOS CB TEM NA TABELA
    begin
      Database := DM.DB;

      sql.Add('select CD_UNIDADE, CD_PROVINCIA, CD_MUNICIPIO, VL_ANO');
      sql.Add('from REGISTRO_PRE_NATAL');
      sql.Add('where CD_UNIDADE ='+leUnidade.lookupValue+' and CD_PROVINCIA = '+leProvincia.lookupValue+' and CD_MUNICIPIO ='+leMunicipio.lookupValue+' and VL_ANO = '+QuotedStr(cbAno.Text)+'');
      Open;
      while not Eof do //Só verificar se encontrou registro
        begin
          bExisteRegistro:=true;
          Last;
        end;
      close;
      free;
    end;
}

  if bConsolidado then
  begin
    MessageDlg('Dados em modo de consolidação, não podem ser modificados!',mtInformation,[mbOK],0);
  end
  else{
  if  not bExisteRegistro then
    begin
      btLimpar.click;
    end
  else}
  begin
    if Application.MessageBox('Deseja Excluir este registro?','Excluir', MB_YESNO+MB_ICONQUESTION) <> IDYES then
      Abort
    else
    begin

    dmGeral.TB_PRE_NATAL.Close;
    if leUnidade.lookupValue <> '' then
      dmGeral.TB_PRE_NATAL.ParamByName('CD_UNIDADE').AsInteger := strtoint(leUnidade.lookupValue);
    if leProvincia.lookupValue <> '' then
      dmGeral.TB_PRE_NATAL.ParamByName('CD_PROVINCIA').AsInteger := strtoint(leProvincia.lookupValue);
    if leMunicipio.lookupValue <> '' then
      dmGeral.TB_PRE_NATAL.ParamByName('CD_MUNICIPIO').AsInteger := strtoint(leMunicipio.lookupValue);
    //dmGeral.TB_PRE_NATAL.ParamByName('VL_ANO').AsString := cbAno.Text;
    dmGeral.TB_PRE_NATAL.Open;
{
    dmGeral.TB_PRE_NATAL.First;
    while not dmGeral.TB_PRE_NATAL.Eof do
      dmGeral.TB_PRE_NATAL.Delete;

    dmGeral.TB_PRE_NATAL.Close; dmGeral.TB_PRE_NATAL.Open;
}
    //if bCarregaGrid then     CarregaGrid(DMGERAL.TB_PRE_NATAL);
{
    //Controle de Usuario (RELATORIOS NAO TEM TRIGGERS) (Operacao DELETE)
        with TIBQuery.Create(nil) do
          begin
            Database := DM.DB;
            sql.Add('INSERT INTO AUDITORIA	(CD_AUDITORIA, CD_UND, CD_USU,DT_AUDITORIA, NM_TABELA, TP_OPERACAO)');
            sql.Add('VALUES 	(GEN_ID(GEN_AUDITORIA,1),'+QuotedStr(prmUnidade)+','+QuotedStr(DM.qyLoginCD_USUARIO.AsString)+', ''NOW'', ''REGISTRO_PRE_NATAL'', ''D'')');
            ExecSQL;
            close;
            free;
          end;
}
        inherited;

        //pgGeral.ActivePageIndex:=0;
        //pgGeralChange(sender);
    end;
  end;
end;

procedure TfrmCadServicosCPN.btLimparClick(Sender: TObject);
begin
  inherited;
  Limpar;
end;

procedure TfrmCadServicosCPN.btCancelarClick(Sender: TObject);
begin
  if bConsolidado then
  begin
    MessageDlg('Dados em modo de consolidação, não podem ser modificados!',mtInformation,[mbOK],0);
  end
  else
   inherited;

end;

procedure TfrmCadServicosCPN.bteditarClick(Sender: TObject);
begin
  pgGeral.ActivePageIndex := 1;
  if not bConsolidado then
    pgGeralChange(sender);

  if bConsolidado then
  begin
    MessageDlg('Dados em modo de consolidação, não podem ser modificados!',mtInformation,[mbOK],0);
  end
  else
  begin
    Unidade := dmGeral.TB_PRE_NATALCD_UNIDADE.AsInteger;
    Provincia := dmGeral.TB_PRE_NATALCD_PROVINCIA.AsInteger;
    Municipio := dmGeral.TB_PRE_NATALCD_MUNICIPIO.AsInteger;
    Ano := dmGeral.TB_PRE_NATALVL_ANO.AsString;
    inherited;
{	
    //Controle de Usuario (RELATORIOS NAO TEM TRIGGERS) (Operacao UPDATE)
    with TIBQuery.Create(nil) do
      begin
        Database := DM.DB;
        sql.Add('INSERT INTO AUDITORIA	(CD_AUDITORIA, CD_UND, CD_USU,DT_AUDITORIA, NM_TABELA, TP_OPERACAO)');
        sql.Add('VALUES 	(GEN_ID(GEN_AUDITORIA,1),'+QuotedStr(prmUnidade)+','+QuotedStr(DM.qyLoginCD_USUARIO.AsString)+', ''NOW'', ''REGISTRO_PRE_NATAL'', ''U'')');
        ExecSQL;
        close;
        free;
      end;
}
  end;


end;

procedure TfrmCadServicosCPN.btimprimirClick(Sender: TObject);
begin
  frmRelatorioWEB := TfrmRelatorioWEB.Create(application);
  try
    sArq := sPathConsulta+'RelatorioSERVICOSCPN'+FormatDateTime('ddmmyyhhnnss',now)+'.xml';
    GeraXML;
    frmRelatorioWEB.relatorio.Navigate(sArq);
    frmRelatorioWEB.ShowModal;
  finally
    frmRelatorioWEB.Free;
    if FileExists(sArq) then
      DeleteFile(sArq);
  end;
end;

procedure TfrmCadServicosCPN.Limpar;
begin
  inherited;
  leProvincia.text:='';
  leMunicipio.text:='';
  leUnidade.text:='';
  cbAno.Text := '';
  cbAte.Text := '';
end;

procedure TfrmCadServicosCPN.leProvinciaChange(Sender: TObject);
begin
  inherited;
  if leProvincia.Modified then
  begin
    qyProvincia.Close;
    qyProvincia.SQL.Text := PSQL;
    qyProvincia.SQL.Add('where Upper(ds_provincia) like(''' + '%' + UpperCase(leProvincia.Text) + '%'')');
    qyProvincia.Open;
  end
  else
  begin
    qyProvincia.SQL.Text := PSQL;
    qyProvincia.Open;
  end;

end;

procedure TfrmCadServicosCPN.leMunicipioChange(Sender: TObject);
begin
  inherited;
  if leMunicipio.Modified then
  begin
    qyMunicipio.Close;
    qyMunicipio.SQL.Text := MSQL;
    qyMunicipio.SQL.Add('and Upper(ds_municipio) like(''' + '%' + UpperCase(leMunicipio.Text) + '%'')');
    qyMunicipio.Open;
  end
  else
  begin
    qyMunicipio.SQL.Text := MSQL;
    qyMunicipio.Open;
  end;

end;

procedure TfrmCadServicosCPN.leUnidadeChange(Sender: TObject);
begin
  inherited;
  if leUnidade.Modified then
  begin
    qyUnidade.Close;
    qyUnidade.SQL.Text := USQL;
    qyUnidade.SQL.Add('and Upper(ds_unidade) like(''' + '%' + UpperCase(leUnidade.Text) + '%'')');
    qyUnidade.Open;
  end
  else
  begin
    qyUnidade.SQL.Text := USQL;
    qyUnidade.Open;
  end;
end;

end.
