    sql.add('select CD_UNIDADE, DS_UNIDADE from UNIDADE');
    if (pCD_PROVINCIA<>NUMERO_INDEFINIDO) then
    begin
     sql.add('where CD_PROVINCIA = '+ intToStr(pCD_PROVINCIA));
    end;
  end;
  result := ibSelect;
end;

